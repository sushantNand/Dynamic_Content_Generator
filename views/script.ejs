<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <!-- <h1>heyyloo  <%= 12+12 %> </h1> -->
    <!-- <script src="/javascripts/code.js"></script> -->

    <div class="main w-full min-h-screen bg-zinc-900">

        <div class = "forms px-10 py-10 text-white">

            <form action="/create" method="post">
                <input class = "block w-full px-6 py-2 bg-zinc-800 rounded" type="text" placeholder="Title Goeess Heeree" name="title">
                <textarea class = "block w-full mt-2 px-5 py-2 bg-zinc-800 resize-none rounded" placeholder="Writee your taskss detailss" name="details"></textarea>
                <input class = "mt-2 bg-blue-600 px-5 py-2 rounded" type="submit" value="Createe Taskkk">
            </form>

        </div>

        <div class = "tasks p-10 flex gap-3 flex-wrap">

            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded">
                        <h1 class = "text-white text-2xl tracking-tighter">Notes Created!</h1>
                        <h1 class = "font-mono text-gray-500 text-2xl tracking-tighter"><%= val %></h1>
                        <a class = "text-blue-500 inline-block mt-3" href="/file/<%= val %>">Readd More?</a>
                    </div>
                <%}) %>
            <% } else{ %>
                <h3 class="text-pink-500">Noo taskss listedd yett:(</h3>
            <% } %>
            
        </div>

    </div>
</body>
</html>